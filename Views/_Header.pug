header.header
     nav.nav.nav--tours
          a.nav__el(href='/') All Tours
     .header__logo
          img(src='/img/logo-white.png' alt='Natours logo')  
     nav.nav.nav--user
          if user
               a.nav__el.nav__el--logout#logout Log out
               a.nav__el(href='/account')
                    img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
                    span= user.name.split(' ')[0]
          else 
               a(href="/login").nav__el Log In
               a(href="/singup").nav__el.nav__el--cta Sing Up